<!DOCTYPE html>
<html>
  <body>
    <main>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <h2>User info</h2>
            <%= image_tag current_user.get_profile_image(100,100) %>
          </div>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name <%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction <%= current_user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <a class="btn btn-outline-secondary btn-block edit_user_id" href="/users/:id/edit">
              <i class="fas fa-user-gear"></i>
            </a>
          </div>
          <h2 class="mt-3">New book</h2>
            <%= form_with model: @book do |f| %>
              <h4>Title</h4>
               <%= f.text_field :title %>
              <h4>Opinion</h4>
               <%= f.text_area :body %><br>
              <%= f.submit 'Create Book' %>
            <% end %>
            <div class="col-md-8 offset-md-1">
              <h2>Books</h2>
            </div>
        </div>
      </div>
    </main>
  </body>
</html>
